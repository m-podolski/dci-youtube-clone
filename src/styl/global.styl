$bp-nav-top-xs = 27em
$bp-nav-top-s = 43em
$bp-nav-top-m = 65em

$top-row-height = 4rem

$sidebar-width-m = 4.4rem
$sidebar-width-l = 15rem

$bp-channel-s = 30em
$bp-channel-m = 45em
$bp-channel-l = 63em
$bp-channel-xl = 71em
$bp-channel-xxl = 89em

$content-max-width-s = 15rem
$content-max-width-m = $bp-channel-s - 2rem
$content-max-width-l = $bp-channel-m - 2rem
$content-max-width-xl = $bp-channel-l - 2rem
$content-max-width-xxl = $bp-channel-xl - 2rem
$content-max-width-xxxl = $bp-channel-xxl - 2rem

$space-content = 1rem
$space-unit = 1.5rem

$space-icons-small = 0.5rem
$space-icons-large = 0.8rem

$box-radius = 3px
$base-font-size = 0.9rem
$transition-duration = 0.25s

$color-text = hsla(100,0%,30%,100%)
$color-bg-m = hsla(100,0%,90%,100%)
$color-channel = #f9f9f9
$color-content = #f1f1f1
$color-active-links = hsl(100, 0%, 80%)

*
  box-sizing border-box
  margin 0
  padding 0

body
  overflow-x hidden
  background $color-content
  color $color-text
  font-family "Fira Sans", sans-serif
  font-weight 400
  font-size $base-font-size
  overflow-wrap break-word
  word-wrap break-word
  word-break break-word
  @media screen and (min-width $bp-nav-top-s)
    display grid
    grid-template-rows $top-row-height 1fr

a
  text-decoration none
  color $color-text

li
  list-style-type none

input
  -webkit-appearance none;
  appearance none;

button
  padding $space-icons-small $space-icons-large
  background none
  border none
  border-radius $box-radius
  font-family "Fira Sans", sans-serif
  font-weight 500
  font-size 0.8rem
  text-transform uppercase

.slider-buttons
  display inline-block
  position absolute
  width 2.5rem
  height @width
  margin 0.4rem
  padding unset
  background white
  clip-path circle(50%)

.slider-buttons:hover
.slider-buttons:active
  background $color-active-links

img
  width 100%

i
  font-size 1.1rem

h1
h2
h3
h4
  font-weight 500
  font-size $base-font-size

h1
h2
  font-size 1.2rem
  padding 0 0 0.55rem
  @media screen and (min-width $bp-channel-m)
    font-size 1.5rem
