@import 'variables'

/*
MAIN also needs to react to media query controlled classes to adapt to the sidebar
*/

main
  position absolute
  top 0
  width 100%
  padding $top-row-height 0 0 0
  transition margin-left $transition-duration

main.menu-s
  width "calc(100% - %s)" % ($sidebar-width-m)
  margin $top-row-height 0 0 $sidebar-width-m
  padding-top 0

main.menu-m
  width "calc(100% - %s)" % ($sidebar-width-l)
  margin $top-row-height 0 0 $sidebar-width-l
  padding-top 0

main.menu-overlay
  z-index -1

.overlay
  display none
  position fixed
  top 0
  right 0
  bottom 0
  left 0
  width 100%
  height 100%
  background hsla(100, 0%, 0%, 70%)

header
  height 16vw
  background no-repeat url(../assets/images/banner-linkedin.png)
  background-size cover
  background-position center center

.channel
  position relative
  background $color-channel

.channel .next
  right 0
  bottom 0

.channel .previous
  left 0
  bottom 0

.channel-info
.content
  margin 0 auto
  padding-left 5px
  padding-right @padding-left

.channel-info
  padding-top $space-unit
  @media screen and (min-width $bp-channel-s)
    display flex
    flex-flow row nowrap
    justify-content space-between
    max-width $content-max-width-m
  @media screen and (min-width $bp-channel-m)
    display grid
    grid-template-columns 100px 1fr
    column-gap $space-content
  @media screen and (min-width $bp-channel-l)
    display flex
    max-width 80%

.channel-info div:nth-child(2)
  margin 0 0 $space-content 0
  @media screen and (min-width $bp-channel-s)
    flex 0 0 auto
  @media screen and (min-width $bp-channel-m)
    grid-column 2/3
  @media screen and (min-width $bp-channel-l)
    flex 1 0 auto

.channel-info div:nth-child(3)
  @media screen and (min-width $bp-channel-s)
    flex 0 1 auto
  @media screen and (min-width $bp-channel-m)
    grid-column 2/3

.channel-avatar
  display none
  @media screen and (min-width $bp-channel-m)
    grid-row 1/3
    display block
    width 80px

.channel-info .check
  margin 0 0 0 $space-icons-small
  font-size 0.8rem

.channel-info p
  font-size 0.8rem

.join
  border solid 1px mediumblue
  color mediumblue

.subscribe
  margin 0 $space-icons-small
  background $color-bg-m
  color $color-text

.nav-channel
  width 70%
  overflow hidden
  margin 0 auto
  padding $space-unit 0 0 0
  text-align center
  text-transform uppercase
  font-weight 500
  @media screen and (min-width $bp-channel-m)
    width 85%

// .nav-channel .stick
//   position fixed
//   top 500px

.nav-channel-list
  display flex
  flex-flow row nowrap
  justify-content space-between
  align-items center
  width 50rem

.nav-channel-list li
  flex 1 1 auto

.nav-channel-list:nth-child(1)
  flex 1 1 8rem

.nav-channel-list:nth-child(2)
  flex 2 1 auto

.nav-channel-list .item-active-link
  margin-top 3px
  border-bottom 3px solid $color-text

.nav-channel-list a
  display inline-block
  width 100%
  padding $space-icons-large 0
  font-size 1rem

.nav-channel-list a:hover
.nav-channel-list a:active
  background $color-active-links

.content
  max-width $content-max-width-s
  @media screen and (min-width $bp-channel-s)
    max-width $content-max-width-m
  @media screen and (min-width $bp-channel-m)
    max-width $content-max-width-l
  @media screen and (min-width $bp-channel-l)
    max-width $content-max-width-xl
  @media screen and (min-width $bp-channel-xl)
    max-width $content-max-width-xxl
  @media screen and (min-width $bp-channel-xxl)
    max-width $content-max-width-xxxl

.content > *
  padding $space-unit 0
  border-bottom solid 2px hsla(100,0%,90%,100%)

.content-top
  @media screen and (min-width $bp-channel-s)
    display flex
    gap $space-content
    align-items flex-start

.content-top .video-thumb
  flex 1 0 15rem
  margin 0

.content-top .top-text
  display none
  @media screen and (min-width $bp-channel-s)
    flex 1 1 auto
    display block

.content p
  color hsl(100, 0%,40%)

.content i
  font-size $base-font-size

.content-group .content-group-header
  display flex
  justify-content: space-between
  padding 0 0 $space-content 0

.content-group .content-group-header .fa-play
  margin 0 $space-icons-small 0 0

.content-group ul
  @media screen and (min-width $bp-channel-s)
    display grid
    grid-template-columns repeat(2, 1fr)
    gap $space-icons-small
  @media screen and (min-width $bp-channel-m)
    grid-template-columns repeat(3, 1fr)
  @media screen and (min-width $bp-channel-l)
    grid-template-columns repeat(4, 1fr)
  @media screen and (min-width $bp-channel-xl)
    grid-template-columns repeat(5, 1fr)
  @media screen and (min-width $bp-channel-xxl)
    grid-template-columns repeat(6, 1fr)

.content-group li
  padding-top $space-content 0

.content-group p:first-of-type
  padding $space-icons-small 0 0 0

.video-thumb
  margin $space-content 0

.video-thumb
  position relative
  width 100%
  z-index 0

.video-thumb .thumb-overlay
  display block
  visibility hidden
  position absolute
  padding 0.4rem
  margin 0.2rem
  border-radius $box-radius
  background black
  color white
  opacity 0.9
  font-size 1.2rem

.video-thumb:hover .thumb-overlay
  visibility visible

.video-thumb .time
  visibility visible
  bottom 0
  right 0
  padding 0.2rem 0.4rem
  font-weight 500
  font-size $base-font-size

.video-thumb .fa-clock
  top 0
  right 0

.video-thumb .fa-comment-dots
  top 2.2rem
  right 0

.channels div
  display flex
  flex-flow column nowrap
  align-items center

.channels img
  width 80px
  margin $space-content 0
  clip-path circle(50%)

.channels .subscribe
  margin $space-content 0 0 0
