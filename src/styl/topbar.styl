$bp-nav-top-xs = 27em
$bp-nav-top-s = 43em
$bp-nav-top-m = 65em

$top-row-height = 4rem

$sidebar-width-m = 4.4rem
$sidebar-width-l = 15rem

$bp-channel-s = 30em
$bp-channel-m = 45em
$bp-channel-l = 63em
$bp-channel-xl = 71em
$bp-channel-xxl = 89em

$content-max-width-s = 15rem
$content-max-width-m = $bp-channel-s - 2rem
$content-max-width-l = $bp-channel-m - 2rem
$content-max-width-xl = $bp-channel-l - 2rem
$content-max-width-xxl = $bp-channel-xl - 2rem
$content-max-width-xxxl = $bp-channel-xxl - 2rem

$space-content = 1rem
$space-unit = 1.5rem

$space-icons-small = 0.5rem
$space-icons-large = 0.8rem

$box-radius = 3px
$base-font-size = 0.9rem
$transition-duration = 0.25s

$color-text = hsla(100,0%,30%,100%)
$color-bg-m = hsla(100,0%,90%,100%)
$color-channel = #f9f9f9
$color-content = #f1f1f1
$color-active-links = hsl(100, 0%, 80%)

.nav-top
  position fixed
  z-index 2
  display flex
  flex-flow row nowrap
  justify-content space-between
  align-items center
  top 0
  width 100%
  height $top-row-height
  padding 0 $space-content 0 0
  background white
  @media screen and (min-width $bp-nav-top-s)
    grid-row 1/2
    padding unset

.nav-top .left
  flex 0 0 auto
  display flex
  align-items center

.nav-top .center
  flex 1 1 100%
  display flex
  flex-flow row nowrap
  @media screen and (min-width $bp-nav-top-s)
    padding 0 10vw

.nav-top .right
  flex 0 0 auto
  display flex
  justify-content flex-end

.nav-top a
.nav-top button
  padding $space-icons-small $space-icons-large

.nav-top .hamburger
  display inline-block
  width 2.4rem
  height @width
  margin 0 ( ($sidebar-width-m - @width) / 2 )
  padding 0
  text-align center
  clip-path circle(50%)
  transition background 0.2s ease

.nav-top .hamburger:active
.nav-top .hamburger:focus
  background $color-active-links

.nav-top .logo
  padding-left unset

.nav-top .logo-img
  width 5rem

.nav-top .search-form
  display none
  @media screen and (min-width $bp-nav-top-s)
    flex 1 1 100%
    display block

.nav-top .search-form fieldset
  @media screen and (min-width $bp-nav-top-s)
    display grid
    grid-template-columns 1fr 80px
    border-radius $box-radius

.nav-top .search-form fieldset > *
  border none

.nav-top .search-input
  grid-column 1/2
  display block
  width 100%
  padding $space-icons-small $space-icons-large

.nav-top .search-button
  grid-column 2/3
  background hsl(100, 0%, 90%)
  border-radius 0px

.nav-top .search
  @media screen and (min-width $bp-nav-top-s)
    display none

.nav-top .voice
.nav-top .notifications
  display none
  @media screen and (min-width $bp-nav-top-xs)
    display inline

.nav-top .voice
  flex 0 0 auto
