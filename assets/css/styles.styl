@import url("https://fonts.googleapis.com/css2?family=Fira+Sans:wght@400;700&display=swap")

$bp-mobile = 45em
$bp-desktop = 60em

$space-icons = 0.5rem 0.8rem
$input-radius = 2px

*
  box-sizing: border-box
  margin: 0
  padding: 0

input {
  -webkit-appearance: none;
  appearance: none;
}

body
  background: white
  font-family: "Fira Sans", sans-serif
  font-weight: 400
  color: darkgrey

img
  width: 5rem

aside
  display: none
  @media screen and (min-width: $bp-desktop)
    display: block
    background: lightblue
    width: 15rem

a
i
  text-decoration: none
  color: hsla(100,0%,30%,100%)

.logo
  font-weight: 700
  color: red

i
  font-size: 1.1rem

.nav-top
  display: flex
  flex-flow: row nowrap
  justify-content: space-between
  align-items: center
  padding: $space-icons

.left
  flex: 2 1 100%

.center
  flex: 1 2 auto

.right
  flex: 2 1 100%
  display: flex
  justify-content: flex-end

.search-form
.search-form fieldset
  display: none
  @media screen and (min-width: $bp-mobile)
    display: block

.search-form fieldset
  @media screen and (min-width: $bp-mobile)
    display: grid
    grid-template-columns: 1fr 60px
    border-radius: $input-radius

.search-form fieldset > *
  border: none

.search-input
  grid-column: 1/2
  width: 30vw
  padding: $space-icons

.search-button
  grid-column: 2/3

.nav-top a
.nav-top button
  padding: $space-icons

.search-icon
  @media screen and (min-width: $bp-mobile)
    display: none
