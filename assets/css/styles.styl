@import url("https://fonts.googleapis.com/css2?family=Fira+Sans:wght@400;700&display=swap")

$bp-mobile = 45em
$bp-desktop = 50em

$space-icons = 0.5rem 0.8rem
$input-radius = 2px

$space-content = 1rem
$top-row-height = 4rem
$sidebar-width = 15rem

*
  box-sizing: border-box
  margin: 0
  padding: 0
  // overflow-wrap: break-word
  // word-wrap: break-word
  // word-break: break-word

body
  min-height: 100vh
  background: white
  font-family: "Fira Sans", sans-serif
  font-weight: 400
  color: darkgrey
  @media screen and (min-width: $bp-desktop)
    display: grid
    grid-template-rows: $top-row-height 1fr
    grid-template-columns: $sidebar-width 1fr

aside
  display: none
  @media screen and (min-width: $bp-desktop)
    display: block
    grid-row: 2/3
    height: "calc(100vh - %s)" %($top-row-height)
    overflow: scroll
    position: fixed
    bottom: 0
    width: $sidebar-width

aside
  display: none
  @media screen and (min-width: $bp-desktop)


main
  width: 100%
  margin: $top-row-height 0 0 $sidebar-width

li
  list-style-type: none

input {
  -webkit-appearance: none;
  appearance: none;
}

img
  width: 5rem

a
i
  text-decoration: none
  color: hsla(100,0%,30%,100%)

i
  font-size: 1.1rem

.logo
  font-weight: 700
  color: red

.nav-top
  position: fixed
  width: 100%
  grid-row: 1/2
  display: flex
  flex-flow: row nowrap
  justify-content: space-between
  align-items: center
  padding: $space-icons
  background: white

.left
  flex: 2 1 100%

.center
  flex: 1 2 auto

.right
  flex: 2 1 100%
  display: flex
  justify-content: flex-end

.search-form
.search-form fieldset
  display: none
  @media screen and (min-width: $bp-mobile)
    display: block

.search-form fieldset
  @media screen and (min-width: $bp-mobile)
    display: grid
    grid-template-columns: 1fr 60px
    border-radius: $input-radius

.search-form fieldset > *
  border: none

.search-input
  grid-column: 1/2
  width: 30vw
  padding: $space-icons

.search-button
  grid-column: 2/3

.nav-top a
.nav-top button
  padding: $space-icons

.search-icon
  @media screen and (min-width: $bp-mobile)
    display: none

.nav-side ul
  border-bottom: solid 2px hsla(100,0%,80%,100%)

.nav-side h3
.nav-side li
  padding: 0.5rem 1rem
