@import url("https://fonts.googleapis.com/css2?family=Fira+Sans:wght@400;700&display=swap")

$bp-mobile = 45em
$bp-medium = 50em

$space-unit = 1.5rem
$space-icons-small = 0.5rem
$space-icons-large = 0.8rem
$space-icons-horizontal = $space-icons-small $space-icons-large
$space-icons-vertical = $space-icons-large $space-icons-small
$input-radius = 2px

$space-content = 1rem
$top-row-height = 4rem
$sidebar-width-desktop = 15rem
$sidebar-width-medium = 5.5rem

*
  box-sizing: border-box
  margin: 0
  padding: 0
  word-wrap: break-word
  word-break: break-word

body
  background: white
  font-family: "Fira Sans", sans-serif
  font-weight: 400
  color: darkgrey
  @media screen and (min-width: $bp-mobile)
    display: grid
    grid-template-rows: $top-row-height 1fr

aside
  display: none
  @media screen and (min-width: $bp-mobile)
    display: block
    grid-row: 2/3
    position: fixed
    top: $top-row-height
    bottom: 0
    text-align: center
    font-size: 0.6rem
  @media screen and (min-width: $bp-medium)
    overflow: scroll
    width: $sidebar-width-desktop
    text-align: left
    font-size: 0.8rem

.nav-side
  @media screen and (min-width: $bp-mobile)
    width: $sidebar-width-medium
  @media screen and (min-width: $bp-medium)
    width: $sidebar-width-desktop


.nav-side > *:not(ul:first-of-type)
  display: none
  @media screen and (min-width: $bp-medium)
    display: block

.list-item-compact
  @media screen and (min-width: $bp-medium)
    display: none

.nav-side ul
  @media screen and (min-width: $bp-medium)
    border-bottom: solid 2px hsla(100,0%,80%,100%)
    padding: $space-icons-small 0

.nav-side h3
.nav-side li
  padding: $space-icons-small 0

.nav-side a
  display: grid
  grid-template-columns: 4rem 1fr

.nav-side i
  display: block
  padding: 0 0 $space-icons-small 0
  @media screen and (min-width: $bp-medium)
    display: inline-block
    margin: 0 auto

main
  width: 100%
  padding: $top-row-height 0 0 0
  @media screen and (min-width: $bp-mobile)
    width: "calc(100% - %s)" % ($sidebar-width-medium)
    margin: $top-row-height 0 0 $sidebar-width-medium
    padding-top: 0
  @media screen and (min-width: $bp-medium)
    width: "calc(100% - %s)" % ($sidebar-width-desktop)
    margin: $top-row-height 0 0 $sidebar-width-desktop

li
  list-style-type: none

input {
  -webkit-appearance: none;
  appearance: none;
}

img
  width: 5rem

a
i
  text-decoration: none
  color: hsla(100,0%,30%,100%)

i
  font-size: 1.1rem

.nav-top
  position: fixed
  width: 100%
  height: $top-row-height
  grid-row: 1/2
  display: flex
  flex-flow: row nowrap
  justify-content: space-between
  align-items: center
  background: white

.left
  flex: 2 1 100%

.center
  flex: 1 2 auto

.right
  flex: 2 1 100%
  display: flex
  justify-content: flex-end

.nav-top a
.nav-top button
  padding: $space-icons-horizontal

.hamburger
  @media screen and (min-width: $bp-mobile)
    display: inline-block
    text-align: center
    width: $sidebar-width-medium

#logo
  padding-left: unset

.logo-img
  font-weight: 700
  color: red

.search-form
.search-form fieldset
  display: none
  @media screen and (min-width: $bp-mobile)
    display: block

.search-form fieldset
  @media screen and (min-width: $bp-mobile)
    display: grid
    grid-template-columns: 1fr 60px
    border-radius: $input-radius

.search-form fieldset > *
  border: none

.search-input
  grid-column: 1/2
  width: 30vw
  padding: $space-icons-horizontal

.search-button
  grid-column: 2/3

.search-icon
  @media screen and (min-width: $bp-mobile)
    display: none

